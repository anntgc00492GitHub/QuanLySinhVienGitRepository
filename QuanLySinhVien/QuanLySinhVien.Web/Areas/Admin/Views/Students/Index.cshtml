@model PagedList.IPagedList<QuanLySinhVien.Models.Models.Student>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Students", FormMethod.Get))
    {
        <div class="form-inline">
            <div class="form-group">
                <select name="filter" class="form-control">
                    <option value=null>Filter Enrollment Status</option>
                    @foreach (SelectListItem option in ViewBag.CurrentFilteredListWithSelectedItem)
                    {
                        <option value="@option.Value" @(option.Selected ? "selected='selected'" : "")> @option.Text</option>
                        if (option.Selected)
                        {
                            ViewBag.CurrentlySelectedFilter = option.Value;
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="searchString" value="@ViewBag.CurrentSearchString" placeholder="search text..." />
            </div>
            <input type="submit" class="btn btn-default" value="submit" />
        </div>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Id", "Index", new
       {
           sortOrderParam = ViewBag.IdSortParm,
           currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
           currentSearchStringParam = ViewBag.CurrentSearchString
       }
                )
        </th>
        <th>
            @Html.ActionLink("FirstName", "Index", new
       {
           sortOrderParam = ViewBag.FirstNameSortParm,
           currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
           currentSearchStringParam = ViewBag.CurrentSearchString
       }
                )
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.ActionLink("EnrollmentDate", "Index", new
       {
           sortOrderParam = ViewBag.EnrollmentDateSortParm,
           currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
           currentSearchStringParam = ViewBag.CurrentSearchString
       }
                )
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PersonID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
            </td>
        </tr>
    }

</table>
<div class="row">
    <div class="col-sm-4">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
    <div class="col-sm-6">
        <div>
            @Html.PagedListPager(
                Model,
                page => Url.Action("Index",
                        new
                        {
                            page,
                            sortOrderParam = ViewBag.CurrentSort,
                            currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
                            currentSearchStringParam = ViewBag.CurrentSearchString
                        }
                    )
                )
        </div>
    </div>
</div>
